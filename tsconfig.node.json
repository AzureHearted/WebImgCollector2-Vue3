{
	"extends": "@tsconfig/node20/tsconfig.json",
	"include": [
		"vite.config.*",
		"vitest.config.*",
		"cypress.config.*",
		"nightwatch.conf.*",
		"playwright.config.*"
	],
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"composite": true,
		"noEmit": false,
		"outDir": "./temp", // TS的编译结果js文件的输出路径
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"types": ["node"]
	}
}
