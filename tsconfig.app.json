{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "./types",
		"composite": true,
		"noEmit": false,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
